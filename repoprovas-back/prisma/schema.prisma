// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @id @default(autoincrement())
  email String @unique
  password String 
}

model tests {
  id Int @id @default(autoincrement())
  name String
  pdfUrl String
  categoryId Int
  categories categories @relation(fields: [categoryId], references: [id])
  teacherDisciplineId Int
  teacherDiscipline teacherDiscipline @relation(fields: [teacherDisciplineId], references: [id])
}

model categories {
  id Int @id @default(autoincrement())
  name String @unique
  tests tests[]
}

model teacherDiscipline {
  id Int @id @default(autoincrement())
  teacherId Int
  teachers teachers @relation(fields: [teacherId], references: [id])
  disciplineId Int
  disciplines disciplines @relation(fields: [disciplineId], references: [id])
  tests tests[]
}

model teachers {
  id Int @id @default(autoincrement())
  name String @unique
  teacherDiscipline teacherDiscipline[]
}

model disciplines {
  id Int @id @default(autoincrement())
  name String @unique
  termId Int
  term terms @relation(fields: [termId], references: [id])
  teacherDiscipline teacherDiscipline[]
}

model terms {
  id Int @id @default(autoincrement())
  number Int @unique
  disciplines disciplines[]
}

